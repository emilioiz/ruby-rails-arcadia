<div class="log-in-body">

<div class="close-div">
    <button class="sign-up-close"><img src='https://arcadia-static-assets.s3.amazonaws.com/arcadia-svgs/close.svg' alt="x"/></button>
  </div>

<div class="log-in-header-div">Log in</div>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="log-in-email-div">
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'sign-up-field email-sign-up', placeholder: "Email" %>
  </div>
</div>

<div class="log-in-pass-div">
  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password",:class => 'sign-up-field password-sign-up', placeholder: "Password"  %>
  </div>
</div>

<div class="log-in-remember-div sign-up-remember">
  <% if devise_mapping.rememberable? %>
    <div class="field remember-div">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
</div>

<div class="log-in-btn-div">
  <div class="actions">
    <%= f.submit "Log in" , :class => 'sign_up-btn' %>
  </div>

<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
