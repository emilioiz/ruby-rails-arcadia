<div class="sign-up-body"> 

  <div class="close-div">
    <button class="sign-up-close"></button>
  </div>

  <div class="header-div">
    <div class="sign-up-header">Sign up</div>
    <div class="sign-up-text">Just by entering your email and password.</div>
  </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field field-email email-div">
          <%= f.email_field :email,  autocomplete: "email", :class => 'sign-up-field email-sign-up', placeholder: "Email", autocomplete: "off" %>
        </div>

        <div class="field field-password password-div">
          <%= f.password_field :password, autocomplete: "new-password", :class => 'sign-up-field password-sign-up', placeholder: "Password", autocomplete: "off" %>
        </div>

        <div class="feild field-password password-confirm-div">
          <%= f.password_field :password_confirmation, autocomplete: "confirm-password", :class => 'sign-up-field password-sign-up', placeholder: "Confirm Password", autocomplete: "off"%>
        </div>

        <div class="consent">
          <p class= "rectangle"></p>
          <p class="sign-up-confirm">I confirm that I have read, consent and agree to Arcadiaâ€™s <u>User Agreement</u> and <u>Privacy Policy</u>.</p>
        </div>
        <div class="actions sign-up">
          <%= f.submit "Sign up", :class => 'sign_up-btn'  %>
        </div>
        <div class="sign-up-skip"><%= link_to "Already have an account", new_user_session_path %></div>
        <div class="sign-up-hr"></div>
      </div>
    <% end %>
</div>
